<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex items-center justify-center min-h-screen bg-white">
  <div class="flex items-center space-x-10">
    <!-- Logo Section -->
    <div class="text-center">
      <img src="/images/l.mark.png" alt="L. MARK Logo" class="h-32">
      <h1 class="text-2xl font-semibold text-black mt-4"></h1>
    </div>

    <!-- Login Box -->
    <div class="w-[450px] p-10 bg-[#220046] rounded-3xl shadow-lg text-center">
      <h2 class="mb-6 text-2xl font-semibold text-white">Admin Login</h2>

      <form action="/admin/login" method="POST" class="space-y-6">
        <!-- Email Input -->
        <div class="relative">
          <input type="email" name="email" placeholder="Enter Your Email" aria-label="Email" required
            class="w-full px-4 py-2 text-white bg-transparent border-b-2 border-white focus:outline-none">
        </div>
        
        <!-- Password Input -->
        <div class="relative">
          <input type="password" name="password" placeholder="Password" aria-label="Password" required
            class="w-full px-4 py-2 text-white bg-transparent border-b-2 border-white focus:outline-none">
        </div>
        
        <!-- Login Button -->
        <button type="submit" class="w-32 py-2 text-black bg-gray-300 rounded-md hover:bg-gray-400">Login</button>
      </form>
    </div>
  </div>
</body>
</html>
