<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>L.Mark - Home</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Joan&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Joan&family=Water+Brush&display=swap" rel="stylesheet">

<style>
    .logout-btn {
        background: linear-gradient(135deg, #94e8c9, #d6c7cb);
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 20px;
        cursor: pointer;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 75, 43, 0.2);
    }

    .logout-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 75, 43, 0.3);
        background: linear-gradient(135deg, #ff416c, #000000);
    }

    .logout-btn:active {
        transform: translateY(0);
        box-shadow: 0 2px 10px rgba(255, 75, 43, 0.2);
    }

    .logout-btn i {
        font-size: 16px;
    }
</style>

</head>
<body>

<!-- Navbar -->
<nav class="navbar">
    <div class="logo">L.Mark</div>
    <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/about">About</a></li>
    </ul>
    <ul class="nav-icons">
        <% if (session.user) { %>
            <li><a href="#"><i class="fas fa-shopping-cart"></i></a></li>
            <li><a href="#"><i class="fas fa-heart"></i></a></li> <!-- Favorite icon -->
            <li> 
                <button id="logoutBtn" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </button> 
            </li>
        <% } else { %>
            <li><a href="/signin"><i class="fas fa-user"></i> Login</a></li>
        <% } %>
    </ul>
</nav>

    
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const logoutBtn = document.getElementById("logoutBtn");
            if (logoutBtn) {
                logoutBtn.addEventListener("click", () => {
                    fetch("/user/logout", { method: "POST" })
                        .then(response => {
                            if (response.redirected) {
                                window.location.href = response.url;
                            } else {
                                alert("Logout failed!");
                            }
                        })
                        .catch(error => console.error("Logout failed", error));
                });
            }
        });
    </script>