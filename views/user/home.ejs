<%-include("../../views/partials/user/navbar")%>

<div class="hero-box"> <!-- Added a wrapper box -->
    <header class="hero">
        <div class="hero-content">
            <h2>Unleash your creativity today with a notebook filled with <br> 
                the thrill of Marvel, the passion of sports, and the adventure of anime!</h2>
            <form action="/products" method="GET" class="search-form">
                <div class="search-box">
                    <input type="text" name="query" placeholder="What are you looking for?">
                    <button type="submit">üîç</button>
                </div>
            </form>
        </div>
        <div class="hero-image">
            <img src="images/ronaldo.jpg" alt="Ronaldo Notebook">
        </div>
    </header>
</div>
    <!--Best selling books -->
<section class="best-selling">
    <div class="text-content">
        <h2>Best Selling <br> <span>Books</span></h2>
        <p>A healthy mind starts with your favorite notebook‚Äîcapture your thoughts, ideas, and creativity effortlessly! ‚ú®</p>
        <a href="/products" class="btn">See more ‚Üí</a>
    </div>

    <div class="books-container">
        <% if (topProducts && topProducts.length > 0) { %>
            <% topProducts.forEach(product => { %>
                <a href="/product/<%= product._id %>" class="book-link">
                    <div class="book">
                        <div class="book-img">
                            <img src="<%= product.imageUrl && product.imageUrl.length > 0 ? product.imageUrl[0] : '/images/placeholder.jpg' %>" 
                                 alt="<%= product.productName %>">
                        </div>
                        <p><%= product.productName %></p>
                    </div>
                </a>
            <% }); %>
        <% } else { %>
            <!-- Fallback content if no products are found -->
            <a href="/product/ronaldo" class="book-link">
                <div class="book">
                    <div class="book-img">
                        <img src="/images/ronaldo.jpg" alt="Cristiano Ronaldo Notebook">
                    </div>
                    <p>Cristiano Ronaldo</p>
                </div>
            </a>
            <a href="/product/messi" class="book-link">
                <div class="book">
                    <div class="book-img">
                        <img src="/images/messi.jpg" alt="Lionel Messi Notebook">
                    </div>
                    <p>Lionel Messi</p>
                </div>
            </a>
            <a href="/product/jujutsu" class="book-link">
                <div class="book">
                    <div class="book-img">
                        <img src="/images/jujutsu kaisen.jpg" alt="Jujutsu Kaisen Notebook">
                    </div>
                    <p>Jujutsu Kaisen</p>
                </div>
            </a>
        <% } %>
    </div>
</section>

<style>
    .book-link {
        text-decoration: none;
        color: inherit;
        display: block;
        transition: transform 0.3s ease;
    }

    .book-link:hover {
        transform: translateY(-5px);
    }

    .book-link:hover .book {
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .book {
        transition: all 0.3s ease;
    }
</style>

    <!-- Categories -->
    <section class="categories">
        <h2>Categories</h2>
        <p class="subheading">Find what you are looking for</p>
        <div class="category-container">
            <a href="/products?category=Sports" class="category-link">
                <div class="category">
                    <div class="category-card">
                        <img src="/images/ronaldo.jpg" alt="Sports">
                    </div>
                    <p>Sports</p>
                </div>
            </a>
            <a href="/products?category=Anime" class="category-link">
                <div class="category">
                    <div class="category-card">
                        <img src="/images/jujutsu kaisen.jpg" alt="Anime">
                    </div>
                    <p>Anime</p>
                </div>
            </a>
            <a href="/products?category=Marvel" class="category-link">
                <div class="category">
                    <div class="category-card">
                        <img src="/images/thor.jpg" alt="Marvel">
                    </div>
                    <p>Marvel</p>
                </div>
            </a>
        </div>
    </section>

    <!-- About Us -->
    <section class="about-us">
        <h2>About us</h2>
        <p class="subheading">Order now and appreciate the beauty of nature</p>
        <div class="features">
            <div class="feature">
                <div class="icon">
                    <i class="fas fa-box"></i>
                </div>
                <h3>Fast & Free Shipping</h3>
                <p>4-day or less delivery time, free shipping and an expedited delivery option.</p>
            </div>
            <div class="feature">
                <div class="icon">
                    <i class="fas fa-phone"></i>
                </div>
                <h3>24/7 Support</h3>
                <p>Answers to any business-related inquiry 24/7 and in real-time.</p>
            </div>
        </div>
    </section>
    
   <%-include("../../views/partials/user/footer")%>

