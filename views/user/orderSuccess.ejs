<%- include("../partials/user/head", {title: "Order Success"}) %>

<body>
  <%- include("../partials/user/navbar") %>

  <div class="max-w-3xl mx-auto px-4 py-16 text-center">
    <div class="bg-white rounded-lg shadow-md p-8">
      <div class="mb-6">
        <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center mx-auto">
          <i class="fas fa-check text-4xl text-green-500"></i>
        </div>
      </div>
      
      <h1 class="text-3xl font-bold text-gray-800 mb-4">Order Placed Successfully!</h1>
      <p class="text-gray-600 mb-8">Thank you for your purchase. Your order has been placed successfully.</p>
      
      <div class="bg-gray-50 p-4 rounded-lg mb-8">
        <p class="text-gray-700 mb-2">Order ID: <span class="font-semibold"><%= order._id %></span></p>
        <p class="text-gray-700">Order Date: <span class="font-semibold"><%= new Date(order.createdAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric' }) %></span></p>
      </div>
      
      <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
        <a href="/orders" class="px-6 py-3 bg-indigo-600 text-white rounded-lg font-bold shadow-md hover:bg-indigo-700 transition-colors duration-200">
          View Order Details
        </a>
        <a href="/products" class="px-6 py-3 bg-gray-200 text-gray-800 rounded-lg font-bold shadow-md hover:bg-gray-300 transition-colors duration-200">
          Continue Shopping
        </a>
      </div>
    </div>
  </div>

  <%- include("../partials/user/footer") %>
</body>
</html> 