<%- include("../partials/user/head", {title: "Payment Failed"}) %>
<link rel="stylesheet" href="/css/style.css">
<link rel="icon" href="/images/favicon.png">

<body>
  <%- include("../partials/user/navbar") %>
  
  <div class="max-w-2xl mx-auto px-4 py-16">
    <div class="text-center">
      <div class="mb-6">
        <i class="fas fa-times-circle text-6xl text-red-500"></i>
      </div>
      <h1 class="text-2xl font-bold mb-4">Payment Failed</h1>
      <p class="text-gray-600 mb-8">
        <%= order.paymentFailureReason || 'Your payment could not be processed.' %>
      </p>
      
      <div class="space-y-4">
        <a href="/checkout" class="block w-full bg-black text-white py-3 rounded-lg text-center">
          Try Again
        </a>
        <a href="/orders" class="block w-full border border-gray-300 text-gray-700 py-3 rounded-lg text-center">
          View Orders
        </a>
      </div>
    </div>
  </div>
  
  <%- include("../partials/user/footer") %>
</body>
</html> 